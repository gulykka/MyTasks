<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <Button
        android:id="@+id/chosen_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/tasks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/mytasks_button"
        android:layout_margin="20dp"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@drawable/chosen_task"
        />

    <Button
        android:id="@+id/mytasks_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="126dp"
        android:layout_height="42dp"
        android:layout_margin="20dp"
        android:text="Мои задачи"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintStart_toEndOf="@+id/chosen_button"
        app:layout_constraintTop_toBottomOf="@+id/tasks" />
    <Button
        android:id="@+id/newlist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tasks"
        android:layout_margin="20dp"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="Добавить список"
        android:onClick="openAddList"
        />

    <TextView
        android:id="@+id/tasks"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:text="Задачи"
        android:textColor="@color/text"
        android:textSize="40dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:background="@color/menu_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Button
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/create_task_button"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        android:text="+"
        android:textSize="35dp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="openAddTask"/>
    <Button
        android:id="@+id/button_right_bottom_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@drawable/right_bottom_menu"
        android:layout_marginBottom="25dp"

        />

    <Button
        android:id="@+id/button_left_bottom_menu"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/left_bottom_menu"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />




</androidx.constraintlayout.widget.ConstraintLayout>