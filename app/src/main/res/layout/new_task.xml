<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ladel"
        android:background="@drawable/back"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        android:onClick="closeNewTask"
        />
    <Button
        android:id="@+id/add_task"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ladel"
        android:background="@drawable/ready"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        />
    <Button
        android:id="@+id/chosen_task"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/newlist"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/chosing_task"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/calendar"
        app:backgroundTintMode="multiply"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"


        />
    <Button
        android:id="@+id/calendar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toEndOf="@+id/chosen_task"
        android:background="@drawable/calendar"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/newlist"
        app:backgroundTintMode="multiply"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/chosen_task"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/newlist"
        app:layout_constraintBaseline_toBottomOf="parent"
        android:background="@color/menu_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/ladel"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Создать задачу"
        android:textColor="@color/text"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/newlist"
        />
    <EditText
        android:id="@+id/newlist"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ladel"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/calendar"
        app:layout_constraintBottom_toBottomOf="@+id/chosen_task"
        android:textColorHint="@color/placeholder"
        android:hint="Новая задача"
        android:padding="15dp"

        android:textSize="22dp"


        />


</androidx.constraintlayout.widget.ConstraintLayout>